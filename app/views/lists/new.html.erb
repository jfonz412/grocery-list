<% provide(:title, "New List") %>
<div class="jumbotron">
	<div class="new-list">
		<h2>New List</h2>
		<%= form_for @list, url: list_path, html: {class: "form-signin"} do |f| %>
			<%= f.text_field :name, placeholder: "Name your list (optional)" %>
			<br>
			<br>
			<% current_user.user_items.each do |item| %>
				<%= check_box_tag(:include, class: "checkbox inline") %>
				<%= f.text_field :name, placeholder: "Item name" %>
			<% end %>
		<% end %>
	</div>
</div>